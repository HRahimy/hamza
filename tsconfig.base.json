{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
//    "strictNullChecks": false,
//    "strictPropertyInitialization": false,
    "baseUrl": ".",
    "paths": {
      "@hamza/api-interfaces": ["libs/api-interfaces/src/index.ts"],
      "@hamza/site-ui/content": ["libs/site-ui/content/src/index.ts"],
      "@hamza/site-ui/layout": ["libs/site-ui/layout/src/index.ts"],
      "@hamza/site-ui/shared/models": [
        "libs/site-ui/shared/models/src/index.ts"
      ],
      "@hamza/site-ui/shared/state": ["libs/site-ui/shared/state/src/index.ts"],
      "@hamza/site-ui/shared/ui": ["libs/site-ui/shared/ui/src/index.ts"],
      "@hamza/typeorm-column-transformers": [
        "libs/typeorm-column-transformers/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
